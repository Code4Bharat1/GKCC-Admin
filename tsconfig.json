{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // Change to "react-jsx" for React 17+
    "baseUrl": "./", // Add baseUrl
    "paths": {
      "@/*": [
        "src/*"
      ] // Add path alias for easier imports
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "src/**/*.ts", // Include src directory for .ts files
    "src/**/*.tsx" // Include src directory for .tsx files
  ],
  "exclude": [
    "node_modules"
  ]
}
